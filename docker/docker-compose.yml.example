version: '3.1'

services:

  db:
    image: mysql
    container_name: mysql
    command: --default-authentication-plugin=mysql_native_password
    restart: always
    ports:
      - 3306:3306
    environment:
      MYSQL_ROOT_PASSWORD: root-password
      MYSQL_DATABASE: db-name
      MYSQL_USER: username
      MYSQL_PASSWORD: password
#    volumes:
#      - $PWD/databaseBackup:/var/lib/mysql

  adminer:
    image: adminer
    restart: always
    ports:
      - 9090:8080
